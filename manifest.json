{
  "manifest_version": 2,

  "name": "CoWin Slot Notifier",
  "description": "Extension to notify the availability of vaccine slots",
  "version": "1.0",
  "icons": {
    "48": "media/icons/notify.png"
  },
  "browser_action": {
    "default_icon": "media/icons/vaccine_1.png",
    "default_popup": "popup.html"
  },
  "background":{
    "scripts": ["background-scripts/VaccineNotifier.js","background-scripts/SlotProcessor.js"]
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "https://ajax.googleapis.com/",
    "http://cdn-api.co-vin.in/"

  ]
}
